<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10sp"
    android:layout_marginTop="10sp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ExpText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Details Expenditure in Diifferet Sectors in the tour"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/Food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ExpText"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/food"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_foodies" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20sp"
            android:text="FOOD"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25dp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/foodfield"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Hotels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Food"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/HotelPicture"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_resort" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20sp"
            android:text="RESORT"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25dp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/resortfield"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/vehicle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Hotels"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/vehiclepicture"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_vehicle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20sp"
            android:text="VEHICLE"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25dp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/vehiclefield"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/guide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vehicle"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/GuidePicture"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_people" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20sp"
            android:text="GUIDE"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25dp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/guidefield"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/others"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/guide"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OTHERS"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25dp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/otherfield"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/others"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TOTAL"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/totalfield"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:text=""
            android:textSize="25dp"
            android:visibility="visible" />
    </LinearLayout>

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorPrimary"
        android:textColor="#FFF"
        android:layout_alignParentBottom="true"


        android:text="Submit" />

    <Button
        android:visibility="gone"
        android:id="@+id/graph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show in Graph"
        android:layout_above="@+id/submit"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="58dp" />

</RelativeLayout>