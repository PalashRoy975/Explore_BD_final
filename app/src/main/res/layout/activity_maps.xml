<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

       <!-- <ImageButton
            android:id="@+id/imgbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_restaurant_black_24dp" />
-->
        <Button
            android:id="@+id/btnRestaurant"
            android:background="@color/colorPrimaryDark"
            android:textColor="#fff"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:textSize="15dp"
            android:text="  Restaurants" />

        <Button
            android:id="@+id/btnHospital"
            android:layout_toRightOf="@id/btnRestaurant"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:textSize="15dp"
            android:paddingRight="29dp"
            android:paddingLeft="29dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="#fff"
            android:layout_alignParentEnd="true"
            android:text=" Hospitals " />



    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button

            android:id="@+id/btnSchool"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:textSize="15dp"
            android:text="Hotels"
            android:background="@color/colorPrimaryDark"
            android:textColor="#fff"
            android:paddingLeft="29dp"
            android:paddingRight="29dp"
            />
        <Button
            android:id="@+id/btnShowDirection"
            android:layout_toRightOf="@id/btnSchool"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="15dp"
            android:text=" Do nothing"
            android:background="@color/colorPrimaryDark"
            android:textColor="#fff"
            />
    </RelativeLayout>



        <fragment
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.example.mirajul.newmapsactivity.MapsActivity" />


    </LinearLayout>


